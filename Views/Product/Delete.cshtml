@model Nimap_Infotech.Models.Product

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this product?</h3>

<div>
    <h4>Product Details:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Product ID
        </dt>
        <dd class="col-sm-10">
            @Model.ProductId
        </dd>
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Model.ProductName
        </dd>
        <dt class="col-sm-2">
            Category ID
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryId
        </dd>
        <dt class="col-sm-2">
            Category Name
        </dt>
        <dd class="col-sm-10">
            @Model.Category.CategoryName
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
